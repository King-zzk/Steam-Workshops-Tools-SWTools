<Window x:Class="SWTools.WPF.MsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTools.WPF"
        mc:Ignorable="d"
        Title="标题" 
        Height="330" Width="520"
        ResizeMode="NoResize"
        Background="{StaticResource BgDefault}"
        WindowStartupLocation="CenterOwner"  ShowInTaskbar="False"
        RenderOptions.BitmapScalingMode="HighQuality">
    <DockPanel>
        <!--底栏-->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Background="{StaticResource BgGray}">
            <Button x:Name="BtnYes" Margin="10 10 20 10" Height="40" DockPanel.Dock="Right"
                Style="{DynamicResource AccentButtonStyle}" Click="BtnYes_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE8FB;" VerticalAlignment="Center" Margin="0 0 10 0"/>
                    <TextBlock Text="是" x:Name="BtnYesText"/>
                </StackPanel>
            </Button>
            <Button x:Name="BtnNo" Margin="10 10 10 10" Height="40" DockPanel.Dock="Right"
                    Click="BtnNo_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE711;" VerticalAlignment="Center" Margin="0 0 10 0"/>
                    <TextBlock Text="否" x:Name="BtnNoText"/>
                </StackPanel>
            </Button>
            <Button x:Name="BtnLink" Margin="20 10 10 10" Height="40" DockPanel.Dock="Left"
                Click="BtnLink_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE71B;" VerticalAlignment="Center" Margin="0 0 10 0"/>
                    <TextBlock Text="链接" x:Name="BtnLinkText"/>
                </StackPanel>
            </Button>
        </DockPanel>
        <Separator DockPanel.Dock="Bottom" BorderBrush="#d4d4d4"/>
        <!--主体-->
        <DockPanel>
            <TextBlock DockPanel.Dock="Left" Margin="40" FontFamily="{StaticResource SymbolThemeFontFamily}" 
                       Text="&#xE783;" FontSize="40"/>
            <DockPanel>
                <TextBlock Margin="0 40 30 10" Text="这也是标题" FontSize="20" FontWeight="Bold" DockPanel.Dock="Top"
                           x:Name="Title2"/>
                <TextBlock Margin="0 10 30 40" Text="示例文本" x:Name="TextBlock" TextWrapping="Wrap"/>
            </DockPanel>
        </DockPanel>
    </DockPanel>
</Window>
