<Window x:Class="SWTools.WPF.MsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTools.WPF"
        xmlns:controls="clr-namespace:SWTools.WPF.Controls"
        mc:Ignorable="d"
        Title="标题"
        SizeToContent="WidthAndHeight"
        MaxWidth="600"
        ResizeMode="NoResize"
        Background="{StaticResource BgDefault}"
        WindowStartupLocation="CenterOwner"  ShowInTaskbar="False"
        RenderOptions.BitmapScalingMode="HighQuality">

    <DockPanel>
        <!--底栏-->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Background="{StaticResource BgGray}">
            <controls:IconButtonAccent x:Name="BtnYes" Click="BtnYes_Click"
                Text="是" Icon="&#xE8FB;" DockPanel.Dock="Right" Margin="10 10 20 10"/>
            <controls:IconButton x:Name="BtnNo" Click="BtnNo_Click"
                Text="否" Icon="&#xE711;" DockPanel.Dock="Right" Margin="10 10 10 10"/>
            <controls:IconButton x:Name="BtnLink" Click="BtnLink_Click"
                Text="链接" Icon="&#xE71B;" DockPanel.Dock="Left" Margin="20 10 10 10"/>
        </DockPanel>
        <Separator DockPanel.Dock="Bottom" BorderBrush="#d4d4d4"/>
        <!--主体-->
        <DockPanel>
            <TextBlock DockPanel.Dock="Left" Margin="40" FontFamily="{StaticResource SymbolThemeFontFamily}" 
                       Text="&#xE783;" FontSize="40"/>
            <DockPanel>
                <TextBlock Margin="0 40 30 10" Text="这也是标题" FontSize="20" FontWeight="Bold" DockPanel.Dock="Top"
                           x:Name="Title2"/>
                <TextBlock Margin="0 10 30 40" Text="示例文本" x:Name="TextBlock" TextWrapping="Wrap"/>
            </DockPanel>
        </DockPanel>
    </DockPanel>
</Window>
