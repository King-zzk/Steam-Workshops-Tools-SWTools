<Window x:Class="SWTools.WPF.MoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTools.WPF"
        mc:Ignorable="d"
        Title="更多信息" 
        Height="460" Width="660"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        RenderOptions.BitmapScalingMode="HighQuality">
    <Window.Background>
        <ImageBrush ImageSource="/img/background.png" Opacity="0.5"/>
    </Window.Background>
    <DockPanel>
        <!--底栏-->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Background="#FF7D7D7D">
            <Button x:Name="BtnOk" Margin="10 10 20 10" VerticalAlignment="Top" Height="40" DockPanel.Dock="Right"
                Style="{DynamicResource AccentButtonStyle}" Click="BtnOk_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE8FB;" VerticalAlignment="Center"/>
                    <TextBlock Text=" 确定"/>
                </StackPanel>
            </Button>
        </DockPanel>
        <Separator DockPanel.Dock="Bottom" BorderBrush="#d4d4d4"/>
        <!--标签页-->
        <TabControl Margin="0,8,0,0">
            <TabItem IsSelected="True">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xECAA;" VerticalAlignment="Center"/>
                        <TextBlock Text=" 关于此项目" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel Margin="10 10 10 10">
                    <DockPanel LastChildFill="False">
                        <Image Height="60" Source="/icon.png" />
                        <TextBlock VerticalAlignment="Center" FontSize="30" Foreground="#13387b" Margin="10"
                                    Text="Steam Workshop Tools"/>
                        <Button x:Name="BtnGithub" Margin="10 10 20 10" VerticalAlignment="Top" Height="40" DockPanel.Dock="Right"
                                Click="BtnGithub_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE71B;" VerticalAlignment="Center"/>
                                <TextBlock Text=" 查看 Github 仓库"/>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                    <TextBlock x:Name="VersionText" Margin="10"
                        Text="[运行时设定]"/>
                    <TextBlock Margin="10"
                        Text="本项目与 Valve Corporation 没有从属关系。&#10;这是一个免费、开源的 Steam Workshop 下载工具，请勿倒卖！"/>
                    <TextBlock Margin="10"
                        Text="Copyright © 2025 Commkom(king-zzk)。根据 GPL-2.0 许可证授权。"/>
                    <TextBlock Margin="10"
                        Text="请在 Github 上查看完整的许可证信息。"/>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE713;" VerticalAlignment="Center"/>
                        <TextBlock Text=" 设置" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Cursor="IBeam">
                    <TextBox HorizontalAlignment="Left" Name="backgroundtextbox" Margin="130,27,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="232" Height="27"/>
                    <Label Content="自定义背景图片:" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="115" Cursor="IBeam"/>
                    <Label Content="输入文件地址即可" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" FontSize="10"/>
                    <Button Content="应用" Margin="381,28,0,0" VerticalAlignment="Top" Background="#FFA5A5A5" Click="Button_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
