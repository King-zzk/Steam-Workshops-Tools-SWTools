<Window x:Class="SWTools.WPF.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTools.WPF"
        xmlns:viewmodel="clr-namespace:SWTools.ViewModel;assembly=SWTools.ViewModel"
        mc:Ignorable="d"
        Title="日志窗口" 
        Height="460" Width="800"
        MinHeight="400" MinWidth="800"
        Background="{StaticResource BgDefault}"
        WindowStartupLocation="CenterOwner"  ShowInTaskbar="False"
        RenderOptions.BitmapScalingMode="HighQuality">
    <Window.DataContext>
        <viewmodel:LogWindow/>
    </Window.DataContext>
    <DockPanel>
        <!--底栏-->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Background="{StaticResource BgGray}">
            <Button x:Name="BtnOk" Margin="10 10 20 10" Height="40" DockPanel.Dock="Right"
                Style="{DynamicResource AccentButtonStyle}" Click="BtnOk_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE8FB;" VerticalAlignment="Center" Margin="0 0 10 0"/>
                    <TextBlock Text="确定"/>
                </StackPanel>
            </Button>
            <Button x:Name="BtnOpenFolder" Margin="10 10 20 10" Height="40"
                Click="BtnOpenFolder_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE838;" VerticalAlignment="Center" Margin="0 0 10 0"/>
                    <TextBlock Text="打开日志文件夹"/>
                </StackPanel>
            </Button>
        </DockPanel>
        <Separator DockPanel.Dock="Bottom" BorderBrush="#d4d4d4"/>
        <!--日志显示-->
        <TextBox Margin="10 10 10 10" IsReadOnly="True" Text="{Binding LogContent}" FontFamily="Consolas" FontSize="13"
                 VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"/>
    </DockPanel>
</Window>
