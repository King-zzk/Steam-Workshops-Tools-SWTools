<Window x:Class="SWTools.WPF.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTools.WPF"
        xmlns:controls="clr-namespace:SWTools.WPF.Controls"
        xmlns:viewmodel="clr-namespace:SWTools.ViewModel;assembly=SWTools.ViewModel"
        mc:Ignorable="d"
        Title="日志窗口" 
        Height="460" Width="800"
        MinHeight="400" MinWidth="800"
        Background="{StaticResource BhDefault}" ThemeMode="Light"
        WindowStartupLocation="CenterOwner"  ShowInTaskbar="False"
        RenderOptions.BitmapScalingMode="HighQuality">
    <Window.DataContext>
        <viewmodel:LogWindow/>
    </Window.DataContext>
    <DockPanel>
        <!--底栏-->
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Background="{StaticResource BhGray}">
            <controls:IconButtonAccent x:Name="BtnOk" Click="BtnOk_Click"
                Text="确定" Icon="&#xE8FB;" DockPanel.Dock="Right" Margin="10 10 20 10"/>
            <controls:IconButton x:Name="BtnOpenFolder" Click="BtnOpenFolder_Click"
                Text="打开日志文件夹" Icon="&#xE838;" DockPanel.Dock="Left" Margin="10 10 20 10"/>
        </DockPanel>
        <Separator DockPanel.Dock="Bottom" BorderBrush="{StaticResource BhBorder}"/>
        <!--日志显示-->
        <TextBox Margin="10 10 10 10" IsReadOnly="True" Text="{Binding LogContent}" FontFamily="Consolas" FontSize="13"
                 VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"
                 x:Name="LogText" TextChanged="LogText_TextChanged"/>
    </DockPanel>
</Window>
